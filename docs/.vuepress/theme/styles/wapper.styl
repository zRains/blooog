$wrapper
  max-width: $contentWidth + ($contentWidth / 3)
  margin: 0 auto
  padding: 20px 2.5rem 0 2.5rem
  @media (max-width: $MQNarrow)
    padding: 2rem
    .page-right
      display: none
  @media (max-width: $MQMobileNarrow)
    padding: 1.5rem
$util-wapper
  padding-top: 20px
  margin: 0 auto
  min-height: 'calc(100vh - 40px - %s - 100px)' % $navbarHeight
  max-width: $contentWidth
  @media (max-width: $MQNarrow)
    padding: 20px 2rem
  @media (max-width: $MQMobileNarrow)
    padding: 20px 1.5rem